

<div class="w-full sm:max-w-[70%]   mx-auto p-5" x-data="{loginForm:true , pwRec: false}" >
    


{% if shop.checkout.guest_login %}
  <div  class="  flex items-center justify-center mt-7 ">
      <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
          <div class="text-center ">
              <h1 class="text-3xl font-bold text-gray-800">Continue as a Guest</h1>
          </div>
          
          {% form 'guest_login' %}

              <button type="submit" class="w-full mt-[1em] bg-blue-500 text-white duration-300 hover:scale-[1.02] cursor-pointer py-3 rounded-lg font-medium relative overflow-hidden group">
                Continue
              </button>
            {% endform %}
  
      </div>
  </div>

  {% else %}
  
  <div x-show="loginForm" class="  flex items-center justify-center w-full ">
    <div class=" w-full  sm:w-[23em] rounded-lg shadow-lg  p-[1em] sm:p-8 ">
        <div class="text-center">
            <h1 class="text-3xl font-bold text-gray-800">Welcome Back</h1>
            
        </div>
        
        {% form 'customer_login' %}
            {% if form.errors %}
              <div class="mb-4 p-4 bg-red-500 text-white rounded">
                <strong class="font-bold">Error!</strong>
                <p>{{form.errors |  default_errors}}</p>
              </div>
            {% endif %}
          
            <div class="mb-6 mt-6">
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
              <input type="email" id="email" name="customer[email]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" placeholder="your@email.com" required>
            </div>
          
            {% if form.password_needed %}
              <div class="m">
                <div class="flex items-center justify-between mb-2">
                  <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                </div>
                <input type="password" name="customer[password]" id="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" placeholder="••••••••" required>
              </div>
              <div class="mb-[1em] mt-2">
                <p x-on:click="loginForm=false, pwRec=true" class=" underline cursor-pointer hover:text-blue-500">Forgot Password</p>
              </div>
            {% endif %}
            
            <button type="submit" class="w-full bg-blue-500 text-white duration-300 hover:scale-[1.02] cursor-pointer py-3 rounded-lg font-medium relative overflow-hidden group">
              Sign In
            </button>
          {% endform %}
          
        
        <div class="mt-8 text-center">
            <p class="text-gray-600">Don't have an account? <a href="{{routes.url}}/account/register" class=" font-medium hover:text-blue-500">Sign up</a></p>
        </div>
    </div>
</div>
  
{% endif %}





<div x-show="pwRec" class="  flex items-center justify-center ">
    <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
        <div class="text-center">
            <h1 class="text-3xl font-bold text-gray-800">Recover Your Password</h1>
            
        </div>
        
        {% form 'recover_customer_password' %}
            {% if form.errors %}
              <div class="mb-4 p-4 bg-red-500 text-white rounded">
                <strong class="font-bold">Error!</strong>
                <p>{{form.errors |  default_errors}}</p>
              </div>
            {% endif %}
          
            <div class="mb-6 mt-6">
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
              <input type="email" id="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" placeholder="your@email.com" required>
            </div>
          
            
            
            <button type="submit" class="w-full bg-blue-500 text-white duration-300 hover:scale-[1.02] cursor-pointer py-3 rounded-lg font-medium relative overflow-hidden group">
              Recover Password
            </button>
          {% endform %}

          
        
        <div class="mt-8 text-center">
            <p x-on:click="loginForm=true,pwRec=false" class="text-gray-600 cursor-pointer mt-3 hover:text-blue-500">Back to Login</p> 
        </div> 
    </div>
</div>
</div>

