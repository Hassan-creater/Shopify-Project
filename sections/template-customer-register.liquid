<div class="max-w-[70%]   mx-auto p-5" x-data="{loginForm:true , pwRec: false}" >
    <div x-show="loginForm" class="  flex items-center justify-center ">
    <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
        <div class="text-center">
            <h1 class="text-3xl font-bold text-gray-800">Register</h1>
            
        </div>
        
        {% form 'create_customer' %}
            {% if form.errors %}
              <div class="mb-4 p-4 bg-green-500 text-white rounded">
                <strong class="font-bold">Error!</strong>
                <p>{{form.errors |  default_errors}}</p>
              </div>
            {% endif %}


            <div class="mb-6 mt-6">
              <label for="f_name" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
              <input type="text" id="f_name" name="customer[first_name]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" placeholder="Jhon" required>
            </div>


            <div class="mb-6 mt-6">
              <label for="l_name" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
              <input type="text" id="l_name" name="customer[last_name]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" placeholder="Doe" required>
            </div>
          
            <div class="mb-6 mt-6">
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
              <input type="email" id="email" name="customer[email]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" placeholder="your@email.com" required>
            </div>
          
        
              <div class="mb-7">
                <div class="flex items-center justify-between mb-2">
                  <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                </div>
                <input type="password" name="customer[password]" id="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" autocomplete="new-password" placeholder="••••••••" required>
              </div>
             
            
            
            <button type="submit" class="w-full bg-blue-500 text-white duration-300 hover:scale-[1.02] cursor-pointer py-3 rounded-lg font-medium relative overflow-hidden group ">
              Sign Up
            </button>
          {% endform %}
          
        
        <div class="mt-8 text-center">
            <p class="text-gray-600">Already have an account? <a href="{{routes.url}}/account/login" class=" font-medium hover:text-blue-500">Sign In</a></p>
        </div>
    </div>
</div>
</div>

